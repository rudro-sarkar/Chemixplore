<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.1/css/all.min.css" integrity="sha512-5Hs3dF2AEPkpNAR7UiOHba+lRSJNeM2ECkwxUIxC1Q/FLycGTbNapWXB4tP889k5T5Ju8fs4b1P5z/iB4nMfSQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/stylesheets/universal-preloader.css">
    <title>Chemixplore</title>
</head>
<body>
    
    <div class="preloader">
        <p class="brand-heading">
            <span class="bh-c">C</span>hemix<spam class="bh-p">P</spam>lore
        </p>

        <div class="brand-decoration">
            <img src="/images/chemixplore-logo.png">
        </div>

        <div class="tooltip-display">
            <p> <%= tooltips %> </p>
        </div>

        <div class="navigation-grid">
            <div id="aboutbtn" class="about"><a><i class="fa-solid fa-info"></i> About</a></div>
            <div id="loginbtn" class="login"><a><i class="fa-solid fa-right-to-bracket"></i> Log in</a></div>
        </div>

    </div>

    <script>
        const aboutbtn = document.getElementById("aboutbtn");
        const loginbtn = document.getElementById("loginbtn");

        aboutbtn.addEventListener('click', () => {
            window.location.href = '/about';
        });

        loginbtn.addEventListener('click', () => {
            window.location.href = '/login';
        });

    </script>

</body>
</html>